{
  "info": {
    "name": "EcoTrack API",
    "description": "Complete API collection for EcoTrack Smart Waste Management System",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    },
    {
      "key": "reportId",
      "value": "",
      "type": "string"
    },
    {
      "key": "collectorId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('accessToken', response.data.accessToken);",
                  "    pm.environment.set('refreshToken', response.data.refreshToken);",
                  "    pm.environment.set('userId', response.data.user._id);",
                  "    pm.test('Registration successful', function () {",
                  "        pm.expect(response.success).to.be.true;",
                  "        pm.expect(response.data.user.email).to.eql(pm.variables.get('userEmail'));",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"{{userEmail}}\",\n  \"password\": \"{{userPassword}}\",\n  \"phone\": \"+1234567890\",\n  \"role\": \"user\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('accessToken', response.data.accessToken);",
                  "    pm.environment.set('refreshToken', response.data.refreshToken);",
                  "    pm.environment.set('userId', response.data.user._id);",
                  "    pm.test('Login successful', function () {",
                  "        pm.expect(response.success).to.be.true;",
                  "        pm.expect(response.data.accessToken).to.not.be.empty;",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@ecotrack.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('accessToken', response.data.accessToken);",
                  "    pm.environment.set('refreshToken', response.data.refreshToken);",
                  "    pm.test('Token refresh successful', function () {",
                  "        pm.expect(response.success).to.be.true;",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "refresh"]
            }
          }
        },
        {
          "name": "Get Profile",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Profile retrieved successfully', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.success).to.be.true;",
                  "    pm.expect(response.data.user).to.have.property('_id');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/auth/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "profile"]
            }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated User Name\",\n  \"phone\": \"+9876543210\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "profile"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Reports",
      "item": [
        {
          "name": "Create Report",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('reportId', response.data.report._id);",
                  "    pm.test('Report created successfully', function () {",
                  "        pm.expect(response.success).to.be.true;",
                  "        pm.expect(response.data.report.status).to.eql('pending');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "photo",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "lat",
                  "value": "40.7128",
                  "type": "text"
                },
                {
                  "key": "lng",
                  "value": "-74.0060",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "Test waste report from Postman",
                  "type": "text"
                },
                {
                  "key": "wasteType",
                  "value": "plastic",
                  "type": "text"
                },
                {
                  "key": "urgency",
                  "value": "medium",
                  "type": "text"
                },
                {
                  "key": "address",
                  "value": "123 Test Street, New York, NY",
                  "type": "text"
                },
                {
                  "key": "estimatedQuantity",
                  "value": "2-3 bottles",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/report",
              "host": ["{{baseUrl}}"],
              "path": ["api", "report"]
            }
          }
        },
        {
          "name": "Get All Reports (Admin/Collector)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/report?page=1&limit=10&status=pending",
              "host": ["{{baseUrl}}"],
              "path": ["api", "report"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "status",
                  "value": "pending"
                }
              ]
            }
          }
        },
        {
          "name": "Get My Reports",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/report/me?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "report", "me"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Report by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/report/{{reportId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "report", "{{reportId}}"]
            }
          }
        },
        {
          "name": "Assign Collector (Admin)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"collectorId\": \"{{collectorId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/report/{{reportId}}/assign",
              "host": ["{{baseUrl}}"],
              "path": ["api", "report", "{{reportId}}", "assign"]
            }
          }
        },
        {
          "name": "Update Report Status",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"in_progress\",\n  \"collectorNotes\": \"Started collection process\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/report/{{reportId}}/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "report", "{{reportId}}", "status"]
            }
          }
        },
        {
          "name": "Get Report Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/report/statistics",
              "host": ["{{baseUrl}}"],
              "path": ["api", "report", "statistics"]
            }
          }
        }
      ]
    },
    {
      "name": "Collectors",
      "item": [
        {
          "name": "Get All Collectors (Admin)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data.collectors.length > 0) {",
                  "        pm.environment.set('collectorId', response.data.collectors[0]._id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/collector?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "collector"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Collector by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/collector/{{collectorId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "collector", "{{collectorId}}"]
            }
          }
        },
        {
          "name": "Get Collector Route",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/collector/{{collectorId}}/route?startLat=40.7128&startLng=-74.0060",
              "host": ["{{baseUrl}}"],
              "path": ["api", "collector", "{{collectorId}}", "route"],
              "query": [
                {
                  "key": "startLat",
                  "value": "40.7128"
                },
                {
                  "key": "startLng",
                  "value": "-74.0060"
                }
              ]
            }
          }
        },
        {
          "name": "Get Collector Dashboard",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/collector/dashboard",
              "host": ["{{baseUrl}}"],
              "path": ["api", "collector", "dashboard"]
            }
          }
        },
        {
          "name": "Start Pickup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reportId\": \"{{reportId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/collector/pickup/start",
              "host": ["{{baseUrl}}"],
              "path": ["api", "collector", "pickup", "start"]
            }
          }
        },
        {
          "name": "Update Collector Status (Admin)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"isActive\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/collector/{{collectorId}}/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "collector", "{{collectorId}}", "status"]
            }
          }
        }
      ]
    },
    {
      "name": "ML Classification",
      "item": [
        {
          "name": "Predict Waste Type",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "image",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/ml/predict",
              "host": ["{{baseUrl}}"],
              "path": ["api", "ml", "predict"]
            }
          }
        },
        {
          "name": "Predict from URL",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"imageUrl\": \"https://example.com/waste-image.jpg\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/ml/predict/url",
              "host": ["{{baseUrl}}"],
              "path": ["api", "ml", "predict", "url"]
            }
          }
        },
        {
          "name": "Get Model Information",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/ml/model",
              "host": ["{{baseUrl}}"],
              "path": ["api", "ml", "model"]
            }
          }
        },
        {
          "name": "Get Confidence Thresholds",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/ml/thresholds",
              "host": ["{{baseUrl}}"],
              "path": ["api", "ml", "thresholds"]
            }
          }
        },
        {
          "name": "Get Supported Waste Types",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/ml/waste-types",
              "host": ["{{baseUrl}}"],
              "path": ["api", "ml", "waste-types"]
            }
          }
        },
        {
          "name": "ML Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/ml/health",
              "host": ["{{baseUrl}}"],
              "path": ["api", "ml", "health"]
            }
          }
        }
      ]
    },
    {
      "name": "System",
      "item": [
        {
          "name": "Health Check",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Health check successful', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.status).to.eql('healthy');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          }
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Set default environment variables if not set",
          "if (!pm.environment.get('userEmail')) {",
          "    pm.environment.set('userEmail', 'test@example.com');",
          "}",
          "if (!pm.environment.get('userPassword')) {",
          "    pm.environment.set('userPassword', 'password123');",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Global test to check response time",
          "pm.test('Response time is less than 5000ms', function () {",
          "    pm.expect(pm.response.responseTime).to.be.below(5000);",
          "});",
          "",
          "// Global test to check for proper JSON response",
          "pm.test('Response is JSON', function () {",
          "    pm.response.to.be.json;",
          "});"
        ]
      }
    }
  ]
}
